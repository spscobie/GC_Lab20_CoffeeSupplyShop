
@{
    ViewBag.Title = "ItemAddForm";
}

@model GC_Deliverable19_Lab20_CoffeeShop_Init.Models.Item

<div class="container">
    <div class="row">
        <div class="col">
            <form action="/Home/ItemAdd" method="post" class="pull-right">
                <h1 id="registrationPageLogo" class="col">Groundswell</h1>
                <h2 id="registrationHeading">New Product Registration</h2>
                <br />
                <h3 id="lblAddItemHeader">Add a new item below:</h3>
                <div class="form-group">
                    <label id="lblAddItemProdName" for="productName">Name</label>
                    <input type="text" class="form-control" id="productName" aria-describedby="emailHelp" name="ProductName" placeholder="Enter name to be listed in web store" required>
                </div>
                <div class="form-group">
                    <label id="lblAddItemProdDesc" for="productDesc">Description</label>
                    <input type="text" class="form-control" id="productDesc" aria-describedby="emailHelp" name="ProductDesc" placeholder="Enter a description" required>
                    <!--<textarea class="form-control" rows="3" cols="1" id="productDesc" aria-describedby="emailHelp" name="ProductDesc" placeholder="Enter a description of the product" required></textarea>-->
                </div>
                <div class="form-group">
                    <label id="lblAddItemQty" for="initQty">Quantity</label>
                    <input type="text" class="form-control" id="initQty" aria-describedby="emailHelp" name="Qty" placeholder="Enter the initial quantity" required>
                </div>
                <div class="form-group">
                    <label id="lblAddItemPrice" for="price">Item Price</label>
                    <input type="text" class="form-control" id="price" aria-describedby="emailHelp" name="Price" placeholder="Enter the item price" required>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg">Save</button>
                </div>
                <br />
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </form>
        </div>
    </div>
</div>
